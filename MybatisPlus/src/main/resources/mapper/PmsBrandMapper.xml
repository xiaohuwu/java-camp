<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ktb.mybatisplus.dao.UserMapper">

    <select id="findMyUser" resultType="com.ktb.mybatisplus.model.User">
        select *
        from user
        where id = #{id}
    </select>

    <select id="findMyUserByWrapper" resultType="com.ktb.mybatisplus.model.User">
        select * from user ${ew.customSqlSegment}
    </select>

</mapper>