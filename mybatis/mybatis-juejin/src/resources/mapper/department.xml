<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ktb.dao.DepartmentDao">

    <resultMap id="userMap" type="com.ktb.entity.Department">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="tel" column="tel"/>
        <collection property="users" ofType="com.ktb.entity.User" column="user_id" foreignColumn="department_id">
            <id property="id" column="user_id"/>
            <result property="name" column="user_name"/>
        </collection>
    </resultMap>

    <resultMap id="lazyUserMap" type="com.ktb.entity.Department">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="tel" column="tel"/>
        <collection property="users" ofType="com.ktb.entity.User" select="com.ktb.dao.UserDao.findUsers" column="id">
        </collection>
    </resultMap>



    <select id="findAllLazy" resultMap="lazyUserMap">
        select * from tbl_department
    </select>

    <select id="findAll" resultMap="userMap">
        select tbl_department.*,
               tbl_user.name as user_name,
               tbl_user.id as user_id
        FROM `tbl_user` INNER JOIN `tbl_department` ON `tbl_department`.`id` = `tbl_user`.`department_id`
    </select>

    <select id="findById" resultType="com.ktb.entity.Department">
        select * from tbl_department where id=#{id}
    </select>

    <insert id="save" parameterType="com.ktb.entity.Department">
        INSERT INTO `tbl_department` (`id`, `name`, `tel`) VALUES (#{id}, #{name}, #{tel})
    </insert>

    <update id="update" parameterType="com.ktb.entity.Department">
        update tbl_department set name = #{name}, tel = #{tel} where id = #{id}
    </update>

    <delete id="deleteById" parameterType="string">
        delete from tbl_department where id = #{id}
    </delete>


</mapper>