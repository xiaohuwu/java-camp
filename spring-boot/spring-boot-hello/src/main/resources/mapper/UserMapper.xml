<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboothello.mapper.UserMapper">

    <select id="findByName" resultType="com.example.springboothello.model.User">
        SELECT  `users`.* FROM `users` WHERE `users`.`name` = #{name}
    </select>

    <insert id="insert" parameterType="com.example.springboothello.model.User">
        INSERT INTO `users` (`name`, `age`, `created_at`, `updated_at`) VALUES (#{name}, #{age}, now(),now())
    </insert>

</mapper>